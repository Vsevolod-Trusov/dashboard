// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Credential {
  id       String   @id @default(uuid())
  name     String
  lastname String
  password String
  profile  Profile?
}

model Department {
  id          String    @id @default(uuid())
  name        String
  description String
  profiles    Profile[]
  createdAt   DateTime  @default(now())
}

model Company {
  name      String    @unique
  createdAt DateTime  @default(now())
  profiles  Profile[]
}

model Profile {
  id            String      @id @default(uuid())
  credentials   Credential  @relation(fields: [credentialsId], references: [id], onDelete: Cascade)
  credentialsId String      @unique
  company       Company     @relation(fields: [companyName], references: [name])
  companyName   String
  department    Department? @relation(fields: [departmentId], references: [id])
  departmentId  String?
  email         String      @unique
  role          String
  isHeader      Boolean     @default(false)
}
